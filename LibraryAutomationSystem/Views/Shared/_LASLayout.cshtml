<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <script src="~/scripts/jquery-3.5.1.js"></script>
</head>
<body class="boddyContainer">
    <header class="headerContainer">
      <h1> Atheneum</h1>  
    <div class="SearchBoxContainer">
        <input type="text" placeholder="Search..." class="searchBox" />
    </div>
    <div class="HeaderTogglePanel">
        ☰
    </div>
    </header>

    <nav class="navContainer">
        <div class="links">
            @Html.ActionLink("Home", "Home", "HomeLAS")
            @if (Request.IsAuthenticated)
            {
                @Html.ActionLink("Log Out", "Logout", "Account")
            }
            else
            {

                    @Html.ActionLink("Login", "Login", "Account")
            }
           @Html.ActionLink("About","","")
        </div>
    </nav>
    <main class="mainContainer">
        <aside class="sideBarContainer">
            <div class="LeftNav">
                <ul class="mainLeftNav">
                    @if (HttpContext.Current.User.IsInRole("admin"))
                    {

                        <li>@Html.ActionLink("ViewCategory", "Category", "Category") </li>
                        <li>@Html.ActionLink("View Language", "View_BookLanguage", "BookLanguage")</li>
                        <li> @Html.ActionLink("View Book", "ViewBook", "Book") </li>
                        <li>@Html.ActionLink("ManageUser", "ManageUser", "User")</li>
                    }
                </ul>
            </div>
        </aside>

        <main>
            <div class="maincontentContainer">
                @if (HttpContext.Current.User.IsInRole("admin"))
                {
                    <div class="adminSearchBoxContainer">
                        <input type="text" placeholder="Search...." class="adminSearchBox" />
                    </div>
                }
                @RenderBody()
            </div>
        </main>
    </main>
    <footer class="footerContainer">
        <div class="footerContainer firstDiv">
            <p class="copyRights">This Website is manage by <span class="copyRightsSpan"><i>Aspire Systems</i></span></p>
        </div>
    </footer>


</body>
</html>
<script>
    $(document).ready(function ()
    {
        $(".HeaderTogglePanel").click(function () {
            $(".links").css("display", "flex");
        });
    });
</script>