@model LibraryAutomationSystem.Models.BookLanguage

@{
    ViewBag.Title = "Create_BookLanguage";
}

<h2>Create_BookLanguage</h2>

@using (Html.BeginForm("Create_BookLanguage", "BookLanguage", FormMethod.Post))
{
    <div>
        <div>
            @Html.DisplayNameFor(Model=>Model.BookLanguageName)
            @Html.TextBoxFor(Model => Model.BookLanguageName, new{  maxlength=15})
            @Html.ValidationMessageFor(Model=>Model.BookLanguageName)
        </div>
        <div>
            @Html.AntiForgeryToken
            <input type="submit" />
        </div>
    </div>
}

